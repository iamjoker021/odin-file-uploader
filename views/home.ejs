<!DOCTYPE html>
<html lang="en">
<%- include('head') %>
<body>
    <%- include('navbar') %>
    <h1>ODIN | File Manager App</h1>
    <% if (locals.currentPath) { %>
    <p>
        <a href="/">Home</a> /
        <% for(let i=0; i<locals.currentPath.length; i++) { %>
            <a href="<%= locals.currentPath[i].id %>"><%= locals.currentPath[i].name %></a> /
        <% } %>
    </p>
    <% } %>
    <h2>Folders: </h2>
    <ul>
        <% for(let i=0; i<folder.length; i++) { %>
            <li><a href="<%= folder[i].id %>"><%= folder[i].name %></a></li>
        <% } %>
    </ul>
    <h2>Files: </h2>
    <ul>
        <% for(let i=0; i<files.length; i++) { %>
            <li><a href="<%= files[i].id %>"><%= files[i].file_path %></a></li>
        <% } %>
    </ul>
</body>
</html>